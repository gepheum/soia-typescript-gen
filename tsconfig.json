{
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["ES2020"],
    "target": "ES2020",
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "allowUnreachableCode": true,
    "skipLibCheck": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "paths": {
      "@/soiagen/*": ["./e2e/soiagen/src/*"]
    }
  }
}
